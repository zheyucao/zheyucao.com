---
export interface SkillCategory {
  name: string;
  items: string[];
}

interface Props {
  title: string;
  categories: SkillCategory[];
}

const { title, categories } = Astro.props;
---

<section class="resume-section scroll-reveal-animate mb-16">
  <h2
    class="text-[clamp(1.8rem,1.5rem+1.5vw,2.8rem)] mb-8 font-semibold border-b border-text-muted pb-2"
  >
    {title}
  </h2>
  <div class="grid grid-cols-[repeat(auto-fit,minmax(120px,1fr))] gap-8">
    {
      categories.map((category) => (
        <div>
          <h3 class="text-[1.4rem] font-semibold mb-4 text-text">{category.name}</h3>
          <ul class="list-none pl-0 m-0 text-[1.2rem] leading-[1.7]">
            {category.items.map((item) => (
              <li class="mb-[0.4rem] text-text-muted">{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
