---
export interface SkillCategory {
  name: string;
  items: string[];
}

interface Props {
  title: string;
  categories: SkillCategory[];
}

const { title, categories } = Astro.props;
---

<section class="resume-section scroll-reveal-animate mb-16">
  <h2 class="section-heading">{title}</h2>
  <div class="grid grid-cols-[repeat(auto-fit,minmax(120px,1fr))] gap-8">
    {
      categories.map((category) => (
        <div class="skill-category">
          <h3 class="category-title">{category.name}</h3>
          <ul class="list-none pl-0 m-0">
            {category.items.map((item) => (
              <li class="skill-item">{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>

<style>
  /* Visual styling - fonts, colors, borders */
  .section-heading {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }

  .category-title {
    font-size: 1.4rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .skill-category ul {
    font-size: 1.2rem;
    line-height: 1.7;
  }

  .skill-item {
    margin-bottom: 0.4rem;
    color: var(--text-muted);
  }
</style>
