---
import { Icon } from "astro-icon/components";

export interface ContactItem {
  icon: string;
  label: string;
  href?: string;
  target?: string;
  rel?: string;
}

interface Props {
  title: string;
  items: ContactItem[];
}

const { title, items } = Astro.props;
---

<section class="resume-section scroll-reveal-animate mb-16 last:mb-0">
  <h2
    class="text-[clamp(1.8rem,1.5rem+1.5vw,2.8rem)] mb-8 font-semibold border-b border-text-muted pb-2"
  >
    {title}
  </h2>
  <ul class="list-none pl-0 m-0 leading-[1.8]">
    {
      items.map((item) => (
        <li class="mb-[0.8rem] flex items-center">
          <Icon name={item.icon} class="mr-[0.8em] text-[1.2em] shrink-0 opacity-80 translate-y-[0.1em]" />
          {item.href ? (
            <a
              href={item.href}
              target={item.target}
              rel={item.rel}
              class="contact-link break-all"
            >
              {item.label}
            </a>
          ) : (
            <span>{item.label}</span>
          )}
        </li>
      ))
    }
  </ul>
</section>

<style>
  /* Link colors - kept in CSS */
  .contact-link {
    color: var(--link-color);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .contact-link:hover {
    color: var(--link-hover-color);
    text-decoration: underline;
  }
</style>
