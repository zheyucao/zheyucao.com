---
import EntryList from "./templates/EntryList.astro";
import SkillGrid from "./templates/SkillGrid.astro";
import TextSection from "./templates/TextSection.astro";
import ContactList from "./templates/ContactList.astro";

interface Props {
  section: {
    id: string;
    title: string;
    type: string;
    content?: any;
    Content?: any;
    visible?: boolean;
  };
}

const { section } = Astro.props;
---

{
  section.visible !== false && (
    <>
      {section.type === "entries" && <EntryList title={section.title} entries={section.content} />}
      {section.type === "skills" && (
        <SkillGrid title={section.title} categories={section.content} />
      )}
      {section.type === "text" && (
        <TextSection title={section.title} content={section.content} Content={section.Content} />
      )}
      {section.type === "contact" && <ContactList title={section.title} items={section.content} />}
    </>
  )
}
