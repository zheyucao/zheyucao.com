---
import { resumeData } from "../../data/resumeData";
const { education } = resumeData;
---

<section class="resume-section scroll-reveal-animate">
  <h2>Education</h2>
  {
    education.map((edu) => (
      <div class="education-entry">
        <div class="header">
          <span class="institution">
            <strong>{edu.institution}</strong>
          </span>
          <span class="date">{edu.date}</span>
          <span class="degree" set:html={edu.degree} />
        </div>
        {edu.details && (
          <p>
            {edu.details.map((detail, index) => (
              <>
                <span set:html={detail} />
                {index < edu.details!.length - 1 && (
                  <>
                    {" "}
                    &emsp; <wbr />{" "}
                  </>
                )}
              </>
            ))}
          </p>
        )}
      </div>
    ))
  }
</section>

<style>
  .resume-section {
    margin-bottom: 4rem;
  }
  h2 {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }
  .education-entry .header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap; /* Allow wrapping on smaller screens */
    margin-bottom: 0.8rem;
    font-size: 1.2rem;
  }
  .education-entry .institution {
    margin-right: 1rem; /* Space between institution and date */
  }
  .education-entry .date {
    font-family: var(--font-family-sans);
    color: var(--text-muted);
    font-size: 1rem;
    white-space: nowrap; /* Prevent date from wrapping */
  }
  .education-entry .details {
    list-style: none;
    padding-left: 0;
    margin-left: 1rem; /* Indent details slightly */
    font-size: 1.1rem;
    line-height: 1.6;
  }
  .education-entry .details li {
    margin-bottom: 0.3rem;
  }

  @media (max-width: 600px) {
    .education-entry .header {
      flex-direction: column; /* Stack header items vertically */
      align-items: flex-start;
    }
    .education-entry .date {
      margin-top: 0.3rem;
    }
    .education-entry .details {
      margin-left: 0; /* Remove indent on mobile */
    }
  }
</style>
