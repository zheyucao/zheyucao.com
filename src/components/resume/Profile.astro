---
import { resumeData } from "../../data/resumeData";
const { profile } = resumeData;
---

<section class="resume-section scroll-reveal-animate">
  <h2>Profile</h2>
  <p>
    I'm <strong>{profile.name}</strong>, a fourth-year undergraduate student at
    <strong>{profile.university}</strong>, majoring in
    <strong>{profile.major}</strong>.
  </p>
  {profile.description.map((desc) => <p set:html={desc} />)}
</section>

<style>
  .resume-section {
    margin-bottom: 4rem;
  }
  h2 {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }
  p {
    line-height: 1.6;
    font-size: 1.1rem;
  }
</style>
