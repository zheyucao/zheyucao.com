---
import { resumeData } from "../../data/resumeData";
const { experience } = resumeData;
---

<section class="resume-section scroll-reveal-animate">
  <h2>Experience</h2>
  {
    experience.map((exp) => (
      <div class="experience-entry">
        <div class="header">
          <span class="institution">
            <strong>{exp.institution}</strong> - {exp.role}
          </span>
        </div>
        <span class="date">{exp.date}</span>
        <ul class="details">
          {exp.details.map((detail) => (
            <li set:html={detail} />
          ))}
        </ul>
      </div>
    ))
  }
</section>

<style>
  .resume-section {
    margin-bottom: 4rem;
  }
  h2 {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }
  ul {
    margin-top: 0.5rem;
  }
  .experience-entry {
    margin-bottom: 2.5rem; /* Space between entries */
  }
  .experience-entry:last-child {
    margin-bottom: 0;
  }
  .experience-entry .header {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 0.8rem;
    font-size: 1.2rem;
    align-items: baseline;
  }
  .experience-entry .date {
    font-family: var(--font-family-sans);
    color: var(--text-muted);
    font-size: 1rem;
    white-space: nowrap;
  }
  .experience-entry .details {
    list-style: disc; /* Use bullet points */
    padding-left: 1.5rem; /* Standard padding for list */
    margin-left: 0;
    font-size: 1.1rem;
    line-height: 1.8;
  }
  .experience-entry .details li {
    margin-bottom: 0.3rem;
  }
  @media (max-width: 600px) {
    .experience-entry .header {
      flex-direction: column;
      align-items: flex-start;
    }
    .experience-entry .date {
      margin-top: 0.3rem;
    }
  }
</style>
