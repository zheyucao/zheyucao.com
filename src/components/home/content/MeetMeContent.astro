---
// Content for text-content sections (Meet me, Connect, custom content)
import Button from "../../common/Button.astro";
import ContactIcons from "../../contact/ContactIcons.astro";
import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import type { ContactItem } from "../../../viewmodels/contactViewModel";

interface Props {
  data: {
    title: string;
    cta: {
      text: string;
      href: string;
    };
    Content: AstroComponentFactory;
    socialItems?: ContactItem[];
  };
}

const { data } = Astro.props;
const { title, cta, Content, socialItems } = data;
---

<h2 slot="title" class="section-title scroll-target-title">{title}</h2>

<div class="section-content scroll-target-content">
  <div class="rich-text">
    <Content />
  </div>

  {
    socialItems?.length ? (
      <div class="connect-icon-links">
        <ContactIcons items={socialItems} />
      </div>
    ) : null
  }

  <div class="button-group">
    <Button class="button" href={cta.href} text={cta.text} wrapperClass="meet-me-cta-button" />
  </div>
</div>

<style>
  .section-title {
    font-size: var(--section-title-size, clamp(2rem, 2rem + 2vw, 4rem));
    font-weight: normal;
    margin-bottom: 1em;
  }

  .section-content {
    font-size: var(--section-content-size, 1.25rem);
    line-height: var(--section-content-line-height, 1.6);
    max-width: var(--section-content-max-width, 65ch);
  }

  .section-content :global(p) {
    font-size: inherit;
    margin-bottom: 1.5em;
  }

  .section-content :global(ul) {
    list-style: none;
    padding-left: 0;
    margin-top: 1rem;
  }

  .section-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .connect-icon-links {
    margin: 2rem 0;
  }

  .button-group {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>

