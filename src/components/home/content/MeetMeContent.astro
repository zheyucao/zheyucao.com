---
// Content for the "Meet me!" section
import Button from "../../common/Button.astro";
import type { AstroComponentFactory } from "astro/runtime/server/index.js";

interface Props {
  data: {
    title: string;
    cta: {
      text: string;
      href: string;
    };
    Content: AstroComponentFactory;
  };
}

const { data } = Astro.props;
const { title, cta, Content } = data;
---

<h2 slot="title" class="about-title scroll-target-title">{title}</h2>

<div class="about-content scroll-target-content">
  <div class="rich-text">
    <Content />
  </div>

  <div class="button-group">
    <Button class="button" href={cta.href} text={cta.text} wrapperClass="meet-me-cta-button" />
  </div>
</div>

<style>
  .button-group {
    display: flex;
    gap: 1rem; /* Adjust spacing as needed */
    margin-top: 2rem;
  }
</style>
