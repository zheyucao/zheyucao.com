---
// Content for the "Meet me!" section
import { getEntry } from "astro:content";
import Button from "../../common/Button.astro";

const meetMeEntry = await getEntry("sections", "meet-me");
const { title, cta } = meetMeEntry.data;
const { Content } = await meetMeEntry.render();
---

<h2 slot="title" class="about-title scroll-target-title">{title}</h2>

<div class="about-content scroll-target-content">
  <div class="rich-text">
    <Content />
  </div>

  <div class="button-group">
    <Button class="button" href={cta.href} text={cta.text} wrapperClass="meet-me-cta-button" />
  </div>
</div>

<style>
  .button-group {
    display: flex;
    gap: 1rem; /* Adjust spacing as needed */
    margin-top: 2rem;
  }
</style>
