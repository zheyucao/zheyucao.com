---
import { Icon } from "astro-icon/components";

export interface ContactItem {
  icon: string;
  label: string;
  href?: string;
  target?: string;
  rel?: string;
}

interface Props {
  title: string;
  items: ContactItem[];
}

const { title, items } = Astro.props;
---

<section class="document-section scroll-reveal-animate mb-16 last:mb-0">
  <h2 class="section-heading">{title}</h2>
  <ul class="list-none pl-0 m-0">
    {
      items.map((item) => (
        <li class="contact-item flex items-center mb-[0.8rem]">
          <Icon name={item.icon} class="contact-icon" />
          {item.href ? (
            <a href={item.href} target={item.target} rel={item.rel} class="contact-link">
              {item.label}
            </a>
          ) : (
            <span>{item.label}</span>
          )}
        </li>
      ))
    }
  </ul>
</section>

<style>
  /* Visual styling - fonts, colors, borders */
  .section-heading {
    font-size: clamp(1.8rem, 1.5rem + 1.5vw, 2.8rem);
    margin-bottom: 2rem;
    font-weight: 600;
    border-bottom: 1px solid var(--text-muted);
    padding-bottom: 0.5rem;
  }

  .document-section ul {
    line-height: 1.8;
  }

  .contact-icon {
    margin-right: 0.8em;
    font-size: 1.2em;
    flex-shrink: 0;
    opacity: 0.8;
    transform: translateY(0.1em);
  }

  .contact-link {
    word-break: break-all;
    color: var(--link-color);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .contact-link:hover {
    color: var(--link-hover-color);
    text-decoration: underline;
  }
</style>
