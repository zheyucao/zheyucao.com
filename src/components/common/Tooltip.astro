---
interface Props {
  label: string;
  class?: string;
  position?: "top" | "bottom";
  trigger?: "hover" | "click";
}

const { label, class: className = "", position = "bottom", trigger = "hover" } = Astro.props;
---

<span class={`tooltip ${position} trigger-${trigger} ${className}`}>
  <slot />
  <span class="tooltip-bubble">
    <slot name="bubble">{label}</slot>
  </span>
</span>

<style>
  .tooltip {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .tooltip-bubble {
    position: absolute;
    padding: 0.2em;
    font-size: 0.8rem;
    line-height: 1.3;
    font-family: var(--font-family-sans);
    background: none;
    color: var(--text-color);
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition:
      opacity 0.16s ease,
      transform 0.16s ease,
      visibility 0.16s ease;
    z-index: 5;
    max-width: 240px;
    text-align: center;
    white-space: normal;
  }

  .tooltip.bottom .tooltip-bubble {
    top: 100%;
    left: 50%;
    transform: translate(-50%, 10px);
  }

  .tooltip.top .tooltip-bubble {
    bottom: 100%;
    left: 50%;
    transform: translate(-50%, -10px);
  }

  .tooltip.trigger-hover:hover .tooltip-bubble,
  .tooltip.trigger-hover:focus-within .tooltip-bubble {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, 2px);
  }

  /* Click-triggered tooltips stay hidden unless explicitly activated */
  .tooltip.trigger-click .tooltip-bubble {
    opacity: 0;
    visibility: hidden;
    transform: translate(-50%, 10px);
  }

  .tooltip.trigger-click.copy-active .tooltip-bubble {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, 0);
    pointer-events: auto;
  }

  .tooltip.trigger-click.copy-active .tooltip-bubble {
    opacity: 1 !important;
    visibility: visible !important;
    transform: translate(-50%, 0);
  }

  .tooltip-bubble .tooltip-label {
    margin-bottom: 0.05rem;
    font-size: 0.95rem;
    font-weight: 600;
  }

  .tooltip-bubble .tooltip-desc {
    font-family: var(--font-family-sans);
    font-size: 0.78rem;
    color: var(--text-muted);
    text-align: center;
  }
</style>
