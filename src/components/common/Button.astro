---
// src/components/common/Button.astro
import type { HTMLAttributes } from "astro/types";
import { Icon } from "astro-icon/components";

type ButtonVariant = "default" | "primary" | "subtle";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  text: string;
  download?: string | boolean;
  icon?: string | null;
  wrapperClass?: string;
  iconPosition?: "left" | "right";
  noMargin?: boolean;
  variant?: ButtonVariant;
}

const {
  href,
  text,
  download,
  icon = null,
  class: className,
  wrapperClass,
  iconPosition = "left",
  noMargin = false,
  variant = "default",
  ...rest
} = Astro.props;

const downloadAttr = download === "" ? true : download;
const iconName = typeof icon === "string" && icon.includes(":") ? icon : undefined;
const iconText = typeof icon === "string" && !iconName ? icon : null;
const variantClass = `button-link--${variant}`;
---

<div class:list={["mb-6 text-left", wrapperClass, { "!mb-0": noMargin }]}>
  <a
    href={href}
    download={downloadAttr}
    class:list={[
      "button-link inline-flex items-center justify-center px-[1.2em] py-[0.6em] rounded-lg font-sans text-[0.9rem] leading-[1.4]",
      variantClass,
      className,
    ]}
    {...rest}
  >
    {
      iconPosition === "left" && icon ? (
        <span
          aria-hidden="true"
          class="inline-flex items-center justify-center mr-[0.5em] leading-none"
        >
          {iconName ? <Icon name={iconName} size={16} /> : iconText}
        </span>
      ) : null
    }
    {text}
    {
      iconPosition === "right" && icon ? (
        <span
          aria-hidden="true"
          class="inline-flex items-center justify-center ml-[0.5em] leading-none"
        >
          {iconName ? <Icon name={iconName} size={16} /> : iconText}
        </span>
      ) : null
    }
  </a>
</div>

<style>
  /* Visual styling - borders, colors, transitions */
  .button-link {
    border: 1px solid var(--button-border-color);
    color: var(--text-muted);
    background-color: transparent;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .button-link:hover {
    border-color: var(--button-border-hover-color);
    background-color: var(--button-hover-bg);
    color: var(--button-hover-text);
  }

  .button-link--primary {
    border-color: var(--button-border-hover-color);
    background-color: var(--button-hover-bg);
    color: var(--button-hover-text);
  }

  .button-link--primary:hover {
    filter: brightness(0.98);
  }

  .button-link--subtle {
    border-color: transparent;
  }

  .button-link--subtle:hover {
    border-color: var(--button-border-color);
  }

  @media (max-width: 600px) {
    :global(.mb-6) {
      margin-bottom: 2rem;
    }
  }
</style>
