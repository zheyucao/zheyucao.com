---
import { ClientRouter } from "astro:transitions";
import DynamicBackground from "../components/DynamicBackground.astro";
import ScrollIndicator from "../components/ScrollIndicator.astro";
import Footer from "../components/Footer.astro";
import { siteConfig } from "../config";
import "../styles/global.css";

// Fontsource Variable Imports
import "@fontsource-variable/inter";
import "@fontsource-variable/inter/wght-italic.css";
import "@fontsource-variable/eb-garamond";
import "@fontsource-variable/eb-garamond/wght-italic.css";

// Define props interface and get the title prop
interface Props {
  title?: string; // Optional title prop
  showIndicatorOverride?: boolean; // Add override prop
}
const { title, showIndicatorOverride } = Astro.props;

// Set a default title if none is provided
const pageTitle = `${title || siteConfig.metadata.title} | ${siteConfig.metadata.author}`;

// Determine if the scroll indicator should be shown
const currentPath = Astro.url.pathname;
const shouldShowBasedOnPath = currentPath === "/";
// Use override if provided, otherwise check path
const showScrollIndicator =
  showIndicatorOverride !== undefined ? showIndicatorOverride : shouldShowBasedOnPath;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={siteConfig.metadata.description} />
    <meta name="author" content={siteConfig.metadata.author} />
    <script is:inline>
      // Safari view transitions can flicker; force fallback swap there.
      const ua = navigator.userAgent;
      const isSafari = /Safari\//.test(ua) && !/Chrome\//.test(ua);
      if (isSafari) {
        try {
          // @ts-expect-error Override to disable View Transitions, which have flicker issues in these browsers.
          document.startViewTransition = undefined;
        } catch {
          /* ignore */
        }
      }
    </script>
    <ClientRouter fallback="swap" />
    <!-- START Insert Theme Detection Script Here -->
    <script is:inline>
      // Immediate theme application to prevent flash
      if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
        document.documentElement.classList.add("dark");
      }
    </script>
    <!-- Theme Handling -->
    <script>
      import { initTheme } from "../lib/layout/theme";
      const THEME_EVENTS_KEY = "__themeEventsRegistered__";

      if (!(window as any)[THEME_EVENTS_KEY]) {
        (window as any)[THEME_EVENTS_KEY] = true;

        let cleanupTheme: (() => void) | undefined;

        const handlePageLoad = () => {
          cleanupTheme = initTheme();
        };

        const handleBeforeSwap = () => {
          cleanupTheme?.();
          cleanupTheme = undefined;
        };

        document.addEventListener("astro:page-load", handlePageLoad);
        document.addEventListener("astro:before-swap", handleBeforeSwap);
      }
    </script>

    <!-- Intersection Observer for Scroll Reveal -->
    <script>
      import { setupIntersectionObserver } from "../lib/layout/intersectionObserver";

      const INTERSECTION_EVENTS_KEY = "__intersectionObserverEventsRegistered__";

      if (!(window as any)[INTERSECTION_EVENTS_KEY]) {
        (window as any)[INTERSECTION_EVENTS_KEY] = true;

        let cleanupObserver: (() => void) | undefined;

        const handlePageLoad = () => {
          if (cleanupObserver) cleanupObserver();
          cleanupObserver = setupIntersectionObserver();
        };

        const handleBeforeSwap = () => {
          if (cleanupObserver) cleanupObserver();
          cleanupObserver = undefined;
        };

        document.addEventListener("astro:page-load", handlePageLoad);
        document.addEventListener("astro:before-swap", handleBeforeSwap);
      }
    </script>

    <!-- GSAP Section Animations -->
    <script>
      import { setupSectionAnimations, cleanupScrollTriggers } from "../lib/layout/gsapAnimations";

      const GSAP_EVENTS_KEY = "__gsapSectionAnimationEventsRegistered__";

      if (!(window as any)[GSAP_EVENTS_KEY]) {
        (window as any)[GSAP_EVENTS_KEY] = true;

        const runSectionAnimations = () => requestAnimationFrame(() => setupSectionAnimations());

        document.addEventListener("astro:page-load", runSectionAnimations);
        document.addEventListener("astro:before-swap", cleanupScrollTriggers);
      }
    </script>
  </head>
  <body>
    <div class="page-wrapper">
      <DynamicBackground />
      <main class="main-content">
        <slot />
      </main>
      <div class="some-empty-space" style="height: 20vh;"></div>
      <Footer />
      {/* Conditionally render ScrollIndicator */}
      {showScrollIndicator && <ScrollIndicator />}
    </div>
  </body>
</html>
